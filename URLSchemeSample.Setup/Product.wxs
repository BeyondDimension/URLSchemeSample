<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" Name="URLSchemeSample.Setup" Language="1033" Version="1.0.0.0" Manufacturer="KJ Systems,Inc." UpgradeCode="601ee202-9c4f-48fa-b6f9-b279c9097018">
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
		<MediaTemplate />

		<Feature Id="ProductFeature" Title="URLSchemeSample.Setup" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
		</Feature>
	</Product>

	<Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">
		  <Directory Id="DesktopFolder" SourceName="Desktop" />
			<Directory Id="ProgramFilesFolder">
				<Directory Id="INSTALLFOLDER" Name="URLSchemeSample" />
			</Directory>
		</Directory>
	</Fragment>

	<Fragment>
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
		  <Component Id="myapplication.exe" Guid="BA75657D-B4ED-4389-90A6-069DFA059590">
        <!-- http://wixtoolset.org/documentation/manual/v3/votive/votive_project_references.html -->
        <File Id="myapplication.exe" Source="$(var.URLSchemeSample.Wpf.TargetPath)" KeyPath="yes" Checksum="yes">
          <Shortcut
            Id="DesktopShortcut"
            Directory="DesktopFolder"
            Name="$(var.URLSchemeSample.Wpf.TargetName)"
            Description="URLSchemeSample desktop application"
            WorkingDirectory="INSTALLFOLDER"
            IconIndex="0"
            Advertise="yes"  />
        </File>
		  </Component>
		</ComponentGroup>
	</Fragment>
</Wix>
